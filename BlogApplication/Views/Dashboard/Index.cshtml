@model List<Post> 
<button type="button" class="btn btn-dark mb-2  ">
<a class="text-decoration-none text-white" asp-action="CreatePost" asp-controller="Dashboard" >Create Post</a>
</button>
<table class="table table-dark">
<thead class="text-center">
    <th>Id</th>
    <th>Title</th>
    <th>Description</th>
    <th>ImageURL</th>
    <th>ShowOnHome</th>
    <th>Category</th>
    <th>Operations</th>
</thead>
<tbody>

        @if (Model != null)
        {
            foreach (var item in Model)
            {
                        <tr class="text-center position-relative" style="vertical-align: middle !important;"> 
                            <td>@item.Id</td>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td><img style="width:200px; height:100px;" src="@item.ImageURL" alt="Alternate Text" /></td>
                            <td>@item.ShowOnHome</td>
                            <td>@item.Category.Name</td>
                            <td>
                               <button style="width:100px;"><a asp-action="PostDetails" asp-controller="Dashboard" asp-route-id="@item.Id" >Edit</a></button>

                                <form class="" asp-action="DeletePost">
                                    <input type="hidden" value="@item.Id" name="Id" />
                                            <button style="width:100px;">Delete</button>
                                </form>
                                </td>
                            
                    
                </tr>
            }  
        }       
</tbody>
</table>